<html>
<head>
    <meta charset="utf-8">
    <title>Encriptador de Texto</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.9-1/crypto-js.js"></script></head>
<body>
<b>Escriba el texto y presione el boton "Encriptar"</b>
<form class="form" method="post"> 
    <input type="text" name="texto" value="">
    <input type="button" name="enviar" value="Encriptar" onclick="Encriptar_texto();">
</form>
<script type="text/javascript">/*FUNCION QUE RECIBE EL TEXTO, LO ENCRIPTA Y LO MUESTRA*/
    function Encriptar_texto(){
        let nombre = document.getElementsByName('texto')[0].value;
        var encrptedText = CryptoJS.MD5(nombre)
        alert("Texto encriptado : "+ encrptedText.toString());
    }
</script>
 </body>
</html>
